<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminManageTeacherLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminManageTeacher"
    android:orientation="vertical">

    <!-- Curved background -->
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="700dp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="@color/lightBlue"
        android:paddingLeft="10px"
        android:rotation="-19"
        android:rotationX="0"
        android:translationX="-190dp"
        android:translationY="-1300px"
        android:layout_margin="-100px"
        android:padding="-100px">
    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBackManageStudent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="&lt;"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:translationY="-700dp"
        android:onClick="btnAdminTeacherManageBack"/>

    <!-- Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alumin"
        android:text="Manage Teacher"
        android:textFontWeight="1000"
        android:textColor="#040404"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationY="-700dp"
        android:translationX="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/alumin"
        android:text="Name"
        android:textFontWeight="1000"
        android:textSize="20sp"
        android:translationX="35dp"
        android:translationY="-600dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:translationX="20dp"
        android:translationY="-600dp">

        <AutoCompleteTextView
            android:id="@+id/actvTeacherNames"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Select or type teacher name"
            android:inputType="textPersonName"
            android:completionThreshold="1"
            android:paddingLeft="15dp"
            android:paddingBottom="6dp"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/alumin"
        android:text="Age"
        android:textFontWeight="1000"
        android:textSize="20sp"
        android:translationX="35dp"
        android:translationY="-580dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:translationX="20dp"
        android:translationY="-580dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etManageTeacherAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Age"
            android:inputType="number"
            android:paddingBottom="6dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/alumin"
        android:text="NIC"
        android:textFontWeight="1000"
        android:textSize="20sp"
        android:translationX="35dp"
        android:translationY="-580dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:translationX="20dp"
        android:translationY="-580dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etManageTeacherNic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter NIC"
            android:inputType="text"
            android:paddingBottom="6dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/alumin"
        android:text="Description"
        android:textFontWeight="1000"
        android:textSize="20sp"
        android:translationX="35dp"
        android:translationY="-580dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:translationX="20dp"
        android:translationY="-580dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etManageTeacherDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Description"
            android:inputType="text"
            android:paddingBottom="6dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/alumin"
        android:text="Password"
        android:textFontWeight="1000"
        android:textSize="20sp"
        android:translationX="35dp"
        android:translationY="-580dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:translationX="20dp"
        android:translationY="-580dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTeacherPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="text"
            android:paddingBottom="6dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/alumin"
        android:text="Confirm Password"
        android:textFontWeight="1000"
        android:textSize="20sp"
        android:translationX="35dp"
        android:translationY="-580dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:translationX="20dp"
        android:translationY="-580dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTeacherConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="text"
            android:paddingBottom="6dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button Row -->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:translationY="-600dp"
        android:translationX="35dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateTeacher"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Update"
            android:textColor="@color/black"
            android:backgroundTint="@color/lightBlue"
            app:cornerRadius="8dp"
            app:strokeColor="@color/lightBlue"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteTeacher"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/holo_red_light"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-1550px"
        android:background="@color/lightBlue"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>