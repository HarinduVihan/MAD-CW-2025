<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentAssignmentResults">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="700dp"
        android:layout_margin="-100px"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="@color/lightBlue"
        android:padding="-100px"
        android:paddingLeft="10px"
        android:rotation="-19"
        android:rotationX="0"
        android:translationX="-190dp"
        android:translationY="-1300px" />

    <Button
        android:id="@+id/btnbk"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="&lt;"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/black"
        android:textFontWeight="1000"
        android:textSize="30dp"
        android:layout_marginTop="25px"
        android:translationX="5dp"
        android:translationY="-700dp"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alumin"
        android:text="Mark Assignments"
        android:textColor="#040404"
        android:textFontWeight="1000"
        android:textSize="34sp"
        android:translationX="35dp"
        android:translationY="-700dp" />

    <ScrollView
        android:id="@+id/namesScrollView"
        android:layout_width="match_parent"
        android:layout_height="486dp"
        android:layout_marginTop="1dp"
        android:padding="16dp"

        android:translationX="0dp"
        android:translationY="-550dp">

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"></LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-1200px"
        android:background="@color/lightBlue"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/bottom_nav_menu_teacher2" />


</LinearLayout>